{
    "compilerOptions": {
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "allowJs": true,
      "checkJs": false,
      "module": "esnext",
      "target": "es5",
      "jsx": "react",
      "moduleResolution": "node",
      "lib": ["es2015", "es6", "es2017", "dom"],
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "typeAcquisition": {
      "enable": true
    },
    "typeRoots": [
      "./index.d.ts",
      "./node_modules/@types"
    ],
    "include": [
      ".src/.ts",
      "src/**/*",
      "./index.d.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "dist",
      "dist"
    ]
  }
  